<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LightCell" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/cyan</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="RedButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/red</item>
        <item name="colorSecondary">@color/red_pressed</item>
    </style>

    <style name="OrangeButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/orange</item>
        <item name="colorSecondary">@color/orange_pressed</item>
    </style>

    <style name="YellowButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="colorSecondary">@color/yellow_pressed</item>
    </style>

    <style name="GreenButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/green_pressed</item>
    </style>

    <style name="CyanButtonStyle" parent="">
        <item name="android:colorPrimary">@color/cyan</item>
        <item name="colorSecondary">@color/cyan_pressed</item>
    </style>

    <style name="BlueButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue_pressed</item>
    </style>

    <style name="PurpleButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/purple</item>
        <item name="colorSecondary">@color/purple_pressed</item>
    </style>

    <style name="PinkButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/pink</item>
        <item name="colorSecondary">@color/pink_pressed</item>
    </style>

    <style name="GreyButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:colorPrimary">@color/grey</item>
        <item name="colorSecondary">@color/grey_pressed</item>
    </style>
</resources>